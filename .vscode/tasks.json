{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Development Environment",
            "type": "shell",
            "command": "Start-Process powershell -Verb RunAs -ArgumentList '-File ${workspaceFolder}\\scripts\\setup_environment.ps1'",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python -m pytest",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Install Plugin to KiCad",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python scripts\\install_plugin.py",
            "problemMatcher": []
        }
    ]
}